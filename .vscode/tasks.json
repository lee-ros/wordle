{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Production",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/scripts/run_production.sh"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run Development",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/scripts/run_development.sh"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Terminate Containers",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/scripts/terminate_containers.sh"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Show Containers Logs",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/scripts/run_docker_logs.sh"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run Alembic Migrations",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/scripts/run_alembic.sh ${input:revision_message}"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "revision_message",
            "description": "Alembic revision message",
            "default": "generic_message",
            "type": "promptString"
        }
    ]
}