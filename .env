PROJECT_NAME=Wordle

# environment setup: dev, prod
ENV=prod

CONTAINER_NAME_DB=db_postgres
CONTAINER_NAME_API=wordle_api
CONTAINER_NAME_WEB=wordle_web

IMAGE_NAME_API=${CONTAINER_NAME_API}
IMAGE_TAG_API="1.0.0"
IMAGE_NAME_WEB=$CONTAINER_NAME_WEB
IMAGE_TAG_WEB="1.0.0"

DB_TYPE=postgresql
DB_DRIVER=asyncpg

DB_USER=postgres
DB_PASS=postgres
DB_ADDRESS=${CONTAINER_NAME_DB}
DB_PORT=5432
DB_NAME=wordle

DB_ALEMBIC_DRIVER=psycopg2
BD_ALEMBIC_ADDRESS=localhost

DB_URI="${DB_TYPE}+${DB_DRIVER}://${DB_USER}:${DB_PASS}@${DB_ADDRESS}:${DB_PORT}/${DB_NAME}"
DB_ALEMBIC_URI="${DB_TYPE}+${DB_ALEMBIC_DRIVER}://${DB_USER}:${DB_PASS}@${BD_ALEMBIC_ADDRESS}:${DB_PORT}/${DB_NAME}"
